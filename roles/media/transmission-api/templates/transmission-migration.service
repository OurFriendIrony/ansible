[Unit]
Description=Migrate completed torrents
Requires=transmission-daemon.service transmission-api.service network-online.target

[Service]
User=root
Type=simple
ExecStart=/bin/bash -c 'sleep 30; NODE_PATH=/usr/local/lib/node_modules node {{ transmission.dir.install }}/migrate-downloaded-torrents.js'
ExecStop=/bin/kill -s STOP $MAINPID
ExecReload=/bin/kill -s HUP $MAINPID
NoNewPrivileges=true
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
