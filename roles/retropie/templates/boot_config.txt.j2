# For more options and information see
# http://rpf.io/configtxt
# Some settings may impact device functionality. See link above for details

# uncomment if you get no picture on HDMI for a default "safe" mode
#hdmi_safe=1

# uncomment this if your display has a black border of unused pixels visible
# and your display can output without overscan
{% if retropie_boot.borderless %}
disable_overscan=1
{% endif %}

# uncomment the following to adjust overscan. Use positive numbers if console
# goes off screen, and negative if there is too much border
#overscan_left=16
#overscan_right=16
#overscan_top=16
#overscan_bottom=16

# uncomment to force a console size. By default it will be display's size minus
# overscan.
#framebuffer_width=1280
#framebuffer_height=720

# uncomment if hdmi display is not detected and composite is being output
#hdmi_force_hotplug=1

# uncomment to force a specific HDMI mode (this will force VGA)
#hdmi_group=1
#hdmi_mode=1

# uncomment to force a HDMI mode rather than DVI. This can make audio work in
# DMT (computer monitor) modes
#hdmi_drive=2

# uncomment to increase signal to HDMI, if you have interference, blanking, or
# no display
#config_hdmi_boost=4

# uncomment for composite PAL
#sdtv_mode=2

# Uncomment some or all of these to enable the optional hardware interfaces
#dtparam=i2c_arm=on
#dtparam=i2s=on
#dtparam=spi=on

# Uncomment this to enable the lirc-rpi module
#dtoverlay=lirc-rpi

# Additional overlays and parameters are documented /boot/overlays/README

# Enable audio (loads snd_bcm2835)
dtparam=audio=on
gpu_mem_256=128
gpu_mem_512=256
gpu_mem_1024=256
overscan_scale=1

{% if retropie_boot.hush_rainbow %}
# Turn off rainbow splash screen
disable_splash=1
{% endif %}
{% if retropie_boot.hush_warnings %}
# Hide power/lightning warnings
avoid_warnings=2
{% endif %}
{% if retropie_overclock.force_turbo %}
# ?
force_turbo=1
{% endif %}
{% if retropie_overclock.cpu_freq is defined %}
# Overclock CPU frequency (default=700)
arm_freq={{ retropie_overclock.cpu_freq }}
{% endif %}
{% if retropie_overclock.gpu_freq is defined %}
# Overclock GPU frequency
gpu_freq={{ retropie_overclock.gpu_freq }}
{% endif %}
{% if retropie_overclock.core_freq is defined %}
# Overclock Core frequency
core_freq={{ retropie_overclock.core_freq }}
{% endif %}
{% if retropie_overclock.ram_freq is defined %}
# Overclock RAM frequency
sdram_freq={{ retropie_overclock.ram_freq }}
{% endif %}
{% if retropie_overclock.v3d_freq is defined %}
# Overclock V3D frequency
v3d_freq={{ retropie_overclock.v3d_freq }}
{% endif %}
{% if retropie_overclock.avoid_pwm %}
# ?
avoid_pwm_pll=1
{% endif %}
{% if retropie_overclock.over_volt %}
# ?
over_voltage=6
{% endif %}

