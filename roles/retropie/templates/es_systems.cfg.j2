<?xml version="1.0"?>
<systemList>
{% for emu in retropie_emus %}
{% if emu.enabled %}
  <system>
    <name>{{ emu.name }}</name>
    <fullname>{{ emu.desc }}</fullname>
{% if emu.path is defined %}
    <path>{{ emu.path }}</path>
{% else %}
    <path>{{ retropie_home }}/roms/{{ emu.name }}</path>
{% endif %}
    <extension>{% for ext in emu.extension %}{{ ext }}{% if not loop.last %} {% endif %}{% endfor %}</extension>
{% if emu.cmd is defined %}
    <command>{{ emu.cmd }}</command>
{% else %}
    <command>/opt/retropie/supplementary/runcommand/runcommand.sh 0 _SYS_ {{ emu.name }} %ROM%</command>
{% endif %}
{% if emu.platform is defined %}
    <platform>{{ emu.platform }}</platform>
{% else %}
    <platform>{{ emu.name }}</platform>
{% endif %}
    <theme>{{ emu.name }}</theme>
  </system>
{% endif %}
{% endfor %}
</systemList>

