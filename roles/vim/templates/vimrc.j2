{{ note.vim }}
"-----------------------------------------------------
" VUNDLE
"-----------------------------------------------------

" Turn off vi compatibility
  set nocompatible
  set encoding=utf8
  filetype off
  set rtp+=~/.vim/bundle/vundle/
  call vundle#rc()

" Plugin manager
  Plugin 'gmarik/vundle'

" Plugins
  Plugin 'vim-airline/vim-airline'
  Plugin 'vim-airline/vim-airline-themes'
  Plugin 'tpope/vim-fugitive'
  Plugin 'godlygeek/tabular'
  " Terraform
  Plugin 'fatih/vim-hclfmt'
  Plugin 'markcornick/vim-terraform'
  Plugin 'jvirtanen/vim-hcl'
  " Ansible
  Plugin 'pearofducks/ansible-vim'
  " Docker
  Plugin 'ekalinin/dockerfile.vim'
  " Powershell
  Plugin 'pprovost/vim-ps1'

" Plugin config
  " Airline
    let g:airline#extensions#tabline#enabled = 1
{% if (not is_gui) or (dist_family == "windows") %}
    let g:airline_powerline_fonts = 0
{% else %}
    let g:airline_powerline_fonts = 1
{% endif %}
    let g:airline_theme = 'term'
" This causes a bug (unable to identify the resolution)
"    let g:airline_section_y = []

"-----------------------------------------------------
" MAPPINGS
"-----------------------------------------------------

  map <C-Right>   :next<CR>|            " Move to next file
  map <C-Left>    :prev<CR>|            " Move to prev file
  map <S-Right>   :wnext<CR>|           " Save - Move to prev file
  map <S-Left>    :wprev<CR>|           " Save - Move to next file

  map <F2>        :Tab /=<CR>|          " Tabulate =
  map <F3>        :Tab /:<CR>|          " Tabulate :
  map <F4>        :Tab /,<CR>|          " Tabulate ,

  map <F5>        :w<CR>|               " Save file
  map <F6>        <S-I>//<ESC>|         " Block comment with '//'
  map <F7>        <S-I>#<ESC>|          " Block comment with '#'
  map <F9>        :edit!<CR>|           " Re-load file

  map <F10>       :set paste!<CR>|      " Paste Mode    [on/off]
  map <F12>       :set number!<CR>|     " Line Numbers  [on/off]

  map <C-F10>     :set wrap!<CR>|       " Wrap Lines    [on/off]

"-----------------------------------------------------
" GENERAL
"-----------------------------------------------------

" System
  filetype plugin on
  syntax on
  set backspace=indent,eol,start
  set t_Co=256
  set nomodeline

" Sounds
  set noeb
  set visualbell
  set t_vb=

" Tabs
  set expandtab
  set shiftwidth=2
  set softtabstop=2

" Search
  set hlsearch
  set incsearch
  set smartcase
  set ignorecase

" Layout
  set number
  set laststatus=2
  set noshowmode

"-----------------------------------------------------

